programa {
  funcao inicio() {
   real base, altura , area
   // ler a base 
   escreva("Digite a base do triangulo:") 
   leia(base)
   // ler a altura
   escreva("Digite a altura do triangulo:")
   leia(altura)
   // calculo da area
   area= (base*altura)/2
   //escreva o resultado
   escreva("A area do triangulo ", area)

  }
}
